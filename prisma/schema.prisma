generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  hash     String
  salt     String
  accounts Account[]
}

model Account {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  ownerId          String  @db.ObjectId
  isBlockinEnabled Boolean
  owner            User    @relation(fields: [ownerId], references: [id])
}
